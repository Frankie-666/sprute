body, html
    display block
    width 100%
    height 100%
    margin 0
    padding 0
    font-family sans-serif

.section
    width 100%
    display flex

    &-top
        height 274px
        background $grey

    &__header
        margin auto
        color $darkGrey
        font-size 65px

.divider
    width 100%
    display flex

    &-stripe
        background $marineBlue
        height 71px
        position relative

        &:after
            content ''
            display block
            width 0
            height 0
            border-left 20px solid transparent
            border-right 20px solid transparent
            border-top 20px solid $marineBlue
            position absolute
            top 100%
            left 50%
            transform translateX(-50%)

    &-stripe &__text
        color $white

    &__text
        margin auto
        font-size 36px